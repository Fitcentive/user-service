
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET      /health                                            io.fitcentive.user.controllers.HealthController.healthCheck

# User endpoints
POST     /api/user                                          io.fitcentive.user.controllers.UserController.createUser
GET      /api/user/:userId                                  io.fitcentive.user.controllers.UserController.getUser(userId: java.util.UUID)
PUT      /api/user/:userId                                  io.fitcentive.user.controllers.UserController.updateUser(userId: java.util.UUID)

# User profile endpoints
GET      /api/user/:userId/profile                          io.fitcentive.user.controllers.UserController.getUserProfile(userId: java.util.UUID)
POST     /api/user/:userId/profile                          io.fitcentive.user.controllers.UserController.createOrUpdateUserProfile(userId: java.util.UUID)
